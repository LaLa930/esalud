<script>
    var ctx= document.getElementById("myChart").getContext("2d");
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [
                {{#each item}}
                    "{{moment date format="YYYY-MM-DDTHH:mm:ssZZ"}}"
                    {{#unless @last}},{{/unless}}
                {{/each}}
            ],
            datasets: [
                {
                label: 'Presión diastólica',
                borderColor: 'rgba(117, 112, 179, 1)',
                backgroundColor: 'rgba(117, 112, 179, 0.03)',
                yAxisID: 'C',
                data: [
                    {{#each item}}
                    {
                        t: "{{moment date format="YYYY-MM-DDTHH:mm:ssZZ"}}",
                        y: {{diastolic}}
                    }{{#unless @last}},{{/unless}}
                    {{/each}}
                ]}

            ]
        },
        options: {
            tooltips: {
                mode: 'index',
            },
            legend: {
                position: 'bottom',
            },
            scales: {
                xAxes: [{
                    type: 'time',
                    time: {
                        tooltipFormat: "DD/MM/YYYY HH:mm:ss",
                        displayFormats: {
                            'hour': 'DD MMM HH:mm',
                            'day': 'MMM DD',
                        }
                    },
                    distribution: 'linear',
                    scaleLabel: {
                        display: true,
                        labelString: 'Fecha'
                    }
                }],
                yAxes: [
                
                 {
                    id: 'C',
                    position: 'left',
                    scaleLabel: {
                        display: true,
                        fontColor: 'rgba(117, 112, 179, 1)',
                        labelString: 'mmHg'
                    }
                }
               
                ]
            }
        }
    });
</script>