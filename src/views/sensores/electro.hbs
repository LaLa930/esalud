
<!--Vista-->

<h3 class=" titulo d-flex justify-content-center" style="margin-top: 20px; color: #04B486;"> Gr√°fica del electrocardiograma</h3>

<div class="container" style="height: 400 px; width: 200 px; margin-top: 20px;">
<canvas id="myChart"></canvas>
</div>


<script>
    var ctx= document.getElementById("myChart").getContext("2d");
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [
                {{#each points}}
                    "{{moment date format="YYYY-MM-DDTHH:mm:ss.SSSZZ"}}"
                    {{#unless @last}},{{/unless}}
                {{/each}}
            ],
            datasets: [
                {
                label: 'Electrocardiograma',
                borderColor: 'rgba(27, 158, 119, 1)',
                backgroundColor: 'rgba(27, 158, 119, 0.03)',
                yAxisID: 'A',
                data: [
                    {{#each points}}
                    {
                        t: "{{moment date format="YYYY-MM-DDTHH:mm:ss.SSSZZ"}}",
                        y: {{value}}
                    }{{#unless @last}},{{/unless}}
                    {{/each}}
                ]}

            ]
        },
        options: {
            elements: {
                point: {
                    radius: 0
                }
            },
            tooltips: {
                mode: 'index',
            },
            legend: {
                position: 'bottom',
            },
            scales: {
                xAxes: [{
                    type: 'time',
                    time: {
                        tooltipFormat: "DD/MM/YYYY HH:mm:ss.SSS",
                        displayFormats: {
                            'hour': 'DD MMM HH:mm',
                            'day': 'MMM DD',
                        }
                    },
                    distribution: 'linear',
                    scaleLabel: {
                        display: true,
                        labelString: 'Fecha'
                    }
                }],
                yAxes: [
                
                 {
                    id: 'A',
                    position: 'left',
                    scaleLabel: {
                        display: true,
                        fontColor: 'rgba(27, 158, 119, 1)',
                        labelString: 'Voltios (V)'
                    }
                }
               
                ]
            }
        }
    });
</script>






