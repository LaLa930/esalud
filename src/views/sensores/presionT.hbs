
<!--Vista-->

<h3 class="titulo  d-flex justify-content-center" style="margin-top: 20px; color: #04B486;"> Gráfica de la Presión Arterial</h3>

<div class="container" style="height: 400 px; width: 400 px;  margin-top: 20px;">
<canvas id="myChart"></canvas>
</div>


<script>
    var ctx= document.getElementById("myChart").getContext("2d");
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: [
                {{#each item}}
                    "{{moment date format="YYYY-MM-DDTHH:mm:ssZZ"}}"
                    {{#unless @last}},{{/unless}}
                {{/each}}
            ],
            datasets: [
                {
                label: 'Pulso',
                borderColor: 'rgba(27, 158, 119, 1)',
                backgroundColor: 'rgba(27, 158, 119, 0.03)',
                yAxisID: 'A',
                data: [
                    {{#each item}}
                    {
                        t: "{{moment date format="YYYY-MM-DDTHH:mm:ssZZ"}}",
                        y: {{pulse}}
                    }{{#unless @last}},{{/unless}}
                    {{/each}}
                ]},
                {
                label: 'Presión Sistólica',
                borderColor: 'rgba(217, 95, 2, 1)',
                backgroundColor: 'rgba(217, 95, 2, 0.03)',
                yAxisID: 'B',
                data: [
                    {{#each item}}
                    {
                        t: "{{moment date format="YYYY-MM-DDTHH:mm:ssZZ"}}",
                        y: {{systolic}}
                    }{{#unless @last}},{{/unless}}
                    {{/each}}
                ]},
                {
                label: 'Presión diastólica',
                borderColor: 'rgba(117, 112, 179, 1)',
                backgroundColor: 'rgba(117, 112, 179, 0.03)',
                yAxisID: 'C',
                data: [
                    {{#each item}}
                    {
                        t: "{{moment date format="YYYY-MM-DDTHH:mm:ssZZ"}}",
                        y: {{diastolic}}
                    }{{#unless @last}},{{/unless}}
                    {{/each}}
                ]}

            ]
        },
        options: {
            tooltips: {
                mode: 'index',
            },
            legend: {
                position: 'bottom',
            },
            scales: {
                xAxes: [{
                    type: 'time',
                    time: {
                        tooltipFormat: "DD/MM/YYYY HH:mm:ss",
                        displayFormats: {
                            'hour': 'DD MMM HH:mm',
                            'day': 'MMM DD',
                        }
                    },
                    distribution: 'linear',
                    scaleLabel: {
                        display: true,
                        labelString: 'Fecha'
                    }
                }],
                yAxes: [
                {
                    id: 'A',
                    position: 'left',
                    scaleLabel: {
                        display: true,
                        fontColor: 'rgba(27, 158, 119, 1)',
                        labelString: 'ppm'
                    },
                    ticks: {
                        suggestedMin: 50,
                        suggestedMax: 200
                    }
                },
                {
                    id: 'B',
                    position: 'left',
                    scaleLabel: {
                        display: true,
                        fontColor: 'rgba(217, 95, 2, 1)',
                        labelString: 'mmHg'
                    },
                    ticks: {
                        suggestedMin: 50,
                        suggestedMax: 200
                    }
                },
                {
                    id: 'C',
                    position: 'left',
                    scaleLabel: {
                        display: true,
                        fontColor: 'rgba(117, 112, 179, 1)',
                        labelString: 'mmHg'
                    },
                    ticks: {
                        suggestedMin: 50,
                        suggestedMax: 200
                    }
                }
                ]
            }
        }
    });
</script>









